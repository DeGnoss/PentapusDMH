<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_encounter"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:foreground="?selectableItemBackground"
    app:cardElevation="0dp"
    android:stateListAnimator="@drawable/elevation_selector">


    <RelativeLayout
        android:id="@+id/clicker_encounter"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/simple_selector"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/name_encounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="start"
            android:layout_marginStart="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

        <TextView
            android:id="@+id/info_encounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_encounter"
            android:layout_centerVertical="true"
            android:layout_gravity="end"
            android:layout_marginStart="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">


        <TextView
            android:id="@+id/deleted_encounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="Deleted"
            android:visibility="gone"
            android:layout_gravity="end"
            android:layout_marginStart="20dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

        <Button
            android:id="@+id/undo_encounter"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textStyle="bold"
            android:text="Undo"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>
