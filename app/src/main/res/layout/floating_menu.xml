<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rsb="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:id="@+id/loc_item_detail_floatmenu_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/fab_margin"
        >

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/loc_item_detail_floatmenu_btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_marginBottom="@dimen/fab_margin"
            app:fabSize="normal"
            android:src="@drawable/ic_clear"

            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@+id/loc_item_detail_floatmenu_close"
        >

        <RelativeLayout
            android:id="@+id/loc_item_detail_floatmenu_npc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="16dp"
            >

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/loc_item_detail_floatmenu_btn_npc"
                android:layout_width="@dimen/filter_image"
                android:layout_height="@dimen/filter_image"
                app:fabSize="mini"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:src="@drawable/ic_person_add"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add NPC"
                android:layout_toLeftOf="@+id/loc_item_detail_floatmenu_btn_npc"
                android:gravity="right|center_vertical"
                android:layout_centerVertical="true"
                android:textColor="#fff"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/loc_item_detail_floatmenu_monster"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            >

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/loc_item_detail_floatmenu_btn_monster"
                android:layout_width="@dimen/filter_image"
                android:layout_height="@dimen/filter_image"
                app:fabSize="mini"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:src="@drawable/ic_person_add"/>


            <TextView
                android:id="@+id/demotext2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Browse Monster Manual"
                android:gravity="right"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/loc_item_detail_floatmenu_btn_monster"
                android:textColor="#fff"
                />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/loc_item_detail_floatmenu_new_monster"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="16dp"
            >

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/loc_item_detail_floatmenu_btn_new_monster"
                android:layout_width="@dimen/filter_image"
                android:layout_height="@dimen/filter_image"
                app:fabSize="mini"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:src="@drawable/ic_person_add"/>


            <TextView
                android:id="@+id/demotext3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create Monster"
                android:gravity="right"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/loc_item_detail_floatmenu_btn_new_monster"
                android:textColor="#fff"
                />


        </RelativeLayout>



    </LinearLayout>

</RelativeLayout>