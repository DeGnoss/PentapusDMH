<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/WizardPageContainer">

    <TextView style="@style/WizardPageTitle" />

    <ScrollView style="@style/FragmentInfo">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/llspeed1"
                android:layout_alignParentTop="true"
                android:weightSum="10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/l1"
                    style="@style/WizardFormSkillLabel"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_marginTop="0dp"
                    android:text="Speed" />

                <EditText
                    android:id="@+id/tvSpeed"
                    android:nextFocusDown="@+id/tvAC2"
                    android:nextFocusRight="@+id/tvAC2"
                    android:imeOptions="actionNext"
                    android:layout_weight="5"
                    android:hint="e.g. 30"
                    style="@style/FragmentInfoACType" />

                <TextView
                    style="@style/WizardFormSkillLabel"
                    android:layout_marginTop="0dp"
                    android:layout_width="0dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:layout_weight="1"
                    android:text="ft." />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/llspeed2"
                android:layout_below="@+id/llspeed1"
                android:weightSum="10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/l2"
                    style="@style/WizardFormSkillLabel"
                    android:layout_marginTop="0dp"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:text="Burrow" />

                <EditText
                    android:id="@+id/tvSpeedBurrow"
                    android:nextFocusDown="@+id/tvAC2"
                    android:nextFocusRight="@+id/tvAC2"
                    android:imeOptions="actionNext"
                    android:layout_weight="5"
                    android:hint="e.g. 30"
                    style="@style/FragmentInfoACType" />

                <TextView
                    style="@style/WizardFormSkillLabel"
                    android:layout_marginTop="0dp"
                    android:layout_width="0dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:layout_weight="1"
                    android:text="ft." />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/llspeed3"
                android:layout_below="@+id/llspeed2"
                android:weightSum="10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/l3"
                    style="@style/WizardFormSkillLabel"
                    android:layout_marginTop="0dp"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:text="Climb" />

                <EditText
                    android:id="@+id/tvSpeedClimb"
                    android:nextFocusDown="@+id/tvAC2"
                    android:nextFocusRight="@+id/tvAC2"
                    android:imeOptions="actionNext"
                    android:layout_weight="5"
                    android:hint="e.g. 30"
                    style="@style/FragmentInfoACType" />

                <TextView
                    style="@style/WizardFormSkillLabel"
                    android:layout_marginTop="0dp"
                    android:layout_width="0dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:layout_weight="1"
                    android:text="ft." />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/llspeed4"
                android:layout_below="@+id/llspeed3"
                android:weightSum="10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/l4"
                    style="@style/WizardFormSkillLabel"
                    android:layout_marginTop="0dp"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:text="Fly" />

                <EditText
                    android:id="@+id/tvSpeedFly"
                    android:nextFocusDown="@+id/tvAC2"
                    android:nextFocusRight="@+id/tvAC2"
                    android:imeOptions="actionNext"
                    android:layout_weight="5"
                    android:hint="e.g. 30"
                    style="@style/FragmentInfoACType" />

                <TextView
                    style="@style/WizardFormSkillLabel"
                    android:layout_marginTop="0dp"
                    android:layout_width="0dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:layout_weight="1"
                    android:text="ft." />
            </LinearLayout>


            <CheckedTextView
                android:id="@+id/ctvHover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="?android:attr/listPreferredItemHeightSmall"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/text_light"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="Hover"
                android:checkMark="?android:attr/listChoiceIndicatorMultiple"
                android:layout_below="@+id/llspeed4"
                android:layout_alignParentStart="true" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/llspeed5"
                android:layout_below="@+id/ctvHover"
                android:weightSum="10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/l5"
                    style="@style/WizardFormSkillLabel"
                    android:layout_marginTop="0dp"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:text="Swim" />

                <EditText
                    android:id="@+id/tvSpeedSwim"
                    android:nextFocusDown="@+id/tvAC2"
                    android:nextFocusRight="@+id/tvAC2"
                    android:imeOptions="actionNext"
                    android:layout_weight="5"
                    android:hint="e.g. 30"
                    style="@style/FragmentInfoACType" />

                <TextView
                    style="@style/WizardFormSkillLabel"
                    android:layout_marginTop="0dp"
                    android:layout_width="0dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:layout_weight="1"
                    android:text="ft." />
            </LinearLayout>



        </RelativeLayout>
    </ScrollView>

</LinearLayout>