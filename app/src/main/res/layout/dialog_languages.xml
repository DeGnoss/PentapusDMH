<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/WizardPageContainer">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ListView
                android:id="@+id/listStandard"
                style="@style/FragmentListView"
                android:footerDividersEnabled="true"
                />

            <TextView
                style="@style/WizardFormLabel"
                android:text="Other languages"
                android:layout_marginTop="10dp"
                />

            <com.pentapus.pentapusdmh.HelperClasses.CustomMultiAutoCompleteTextView
                android:id="@+id/tvLanguagesOther"
                style="@style/FragmentInfoType"
                android:hint="e.g. Gnoll"
                android:completionThreshold="1"
                android:imeOptions="actionNext" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>