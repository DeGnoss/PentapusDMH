<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/transparent"
    android:clickable="true"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:clipToPadding="false"
        android:layout_above="@+id/actionButtons"
        android:isScrollContainer="true"
        android:paddingBottom="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <View
                android:id="@+id/vFrame"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp" />

            <ImageView
                android:id="@+id/ivAvatar"
                style="?android:borderlessButtonStyle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignStart="@+id/vFrame"
                android:layout_alignTop="@+id/vFrame"
                android:layout_margin="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/avatar_knight" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/ivAvatar"
                android:selectAllOnFocus="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textSize="25dp"
                android:textColor="#FFFFFFFF" />

            <TextView
                android:id="@+id/tvType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:selectAllOnFocus="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:layout_below="@+id/tvName"
                android:layout_alignStart="@+id/tvName"
                android:textColor="#FFFFFFFF"
                />

            <TextView
                android:id="@+id/tvHpCurrent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:layout_marginTop="5dp"
                android:layout_alignStart="@+id/tvName"
                android:layout_below="@+id/tvType"
                android:textColor="#FFFFFFFF"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvHpMax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/tvHpCurrent"
                android:layout_below="@+id/tvType"
                android:textColor="#FFFFFFFF"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvAc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="5dp"
                android:layout_alignStart="@+id/tvHpCurrent"
                android:layout_below="@id/tvHpCurrent"
                android:textColor="#FFFFFFFF"
                android:textSize="20dp"/>


            <TextView
                android:id="@+id/tvSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="#FFFFFFFF"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="5dp"
                android:layout_alignStart="@id/ivAvatar"
                android:layout_below="@id/tvAc" />

            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="#FFFFFF"
                android:layout_alignParentStart="true"
                android:layout_below="@id/tvSpeed"/>


            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignStart="@+id/ivAvatar"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_below="@id/line2"
                android:id="@+id/ll_statblock">

                <LinearLayout
                    android:id="@+id/llSTR"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/tvLabelSTR"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="5dp"
                        android:textColor="#FFFFFFFF"
                        android:text="STR" />

                    <TextView
                        android:id="@+id/tvSTR"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:textColor="#FFFFFFFF"
                        android:text="14 (+2)" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llDEX"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/tvLabelDEX"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="5dp"
                        android:textColor="#FFFFFFFF"
                        android:text="DEX" />

                    <TextView
                        android:id="@+id/tvDEX"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:textColor="#FFFFFFFF"
                        android:text="11 (+0)" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llCON"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/tvLabelCON"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="5dp"
                        android:textColor="#FFFFFFFF"
                        android:text="CON" />

                    <TextView
                        android:id="@+id/tvCON"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:textColor="#FFFFFFFF"
                        android:text="13 (+1)" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llINT"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/tvLabelINT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="5dp"
                        android:textColor="#FFFFFFFF"
                        android:text="INT" />

                    <TextView
                        android:id="@+id/tvINT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:textColor="#FFFFFFFF"
                        android:text="1 (-5)" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llWIS"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/tvLabelWIS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="5dp"
                        android:textColor="#FFFFFFFF"
                        android:text="WIS" />

                    <TextView
                        android:id="@+id/tvWIS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="#FFFFFFFF"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:text="3 (-4)" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llCHA"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/tvLabelCHA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="5dp"
                        android:textColor="#FFFFFFFF"
                        android:text="CHA" />

                    <TextView
                        android:id="@+id/tvCHA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:textColor="#FFFFFFFF"
                        android:text="1 (-5)" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="#FFFFFF"
                android:layout_alignParentStart="true"
                android:layout_below="@id/ll_statblock"/>

